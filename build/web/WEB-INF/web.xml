<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servelets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping> 
    <servlet>
        <servlet-name>userhome</servlet-name>
        <servlet-class>Servelets.UserHome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userhome</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>Servelets.Registration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Servelets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>patientupdate</servlet-name>
        <servlet-class>Servelets.PatientUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>patientupdate</servlet-name>
        <url-pattern>/patientupdate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>medicineupdate</servlet-name>
        <servlet-class>Servelets.MedicineUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>medicineupdate</servlet-name>
        <url-pattern>/medicineupdate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>appointmentupdate</servlet-name>
        <servlet-class>Servelets.AppointmentUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>appointmentupdate</servlet-name>
        <url-pattern>/appointmentupdate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
